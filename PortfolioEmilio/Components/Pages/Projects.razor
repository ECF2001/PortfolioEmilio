@page "/projects"
@layout MainLayout
@using PortfolioEmilio.Components.Layout

<PageTitle>Projects - Portfolio</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-12">
    <MudText Typo="Typo.h4" Align="Align.Center" GutterBottom="true">My Projects</MudText>

    <MudText Typo="Typo.subtitle1" Align="Align.Center" Class="mb-6">
        A collection of selected works demonstrating my experience and skills.
    </MudText>

    <MudGrid>
        @foreach (var project in _projects)
        {
            <MudItem xs="12" md="6" lg="4">
                <MudCard Class="mb-6" Style="border-radius: 12px;">
                    <MudCardMedia Image="@project.ImagePath" Height="200" />
                    <MudCardContent>
                        <MudText Typo="Typo.h6">@project.Title</MudText>
                        <MudText Typo="Typo.body2">@project.Description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary" Href="@project.Link" Target="_blank">
                            View Details
                        </MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
</MudContainer>


